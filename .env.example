# Wallet Configuration
VITE_WALLET_PROVIDER=breez
VITE_BREEZ_API_KEY=your_breez_api_key_here
VITE_ENABLE_ZAPS=true

# Network Configuration
# Use 'testnet' for development/preview environments and 'mainnet' only for production
VITE_BREEZ_NETWORK=testnet

# Seed Management
# Set to true to use demo seed for testing (dev/preview only)
VITE_BREEZ_USE_DEMO_SEED=true
# For production, encrypt your seed and store it here:
# VITE_BREEZ_SEED_ENCRYPTED=<encrypted_seed_here>

# Optional Fallback (NWC)
# VITE_WALLET_FALLBACK=nwc
# VITE_NWC_URI=nostr+walletconnect://...
# VITE_NWC_RELAY=wss://relay.getalby.com/v1

# Observability & Debugging
# Enable wallet event logging (init → balance → payment trace)
# Set to true in development/preview to debug wallet flows; keep false in production
VITE_WALLET_LOGS=false

# Show /wallet-debug route on preview/staging environments
# Set to true to expose debug UI on Vercel previews (where NODE_ENV=production)
# Keep false in production to hide debug route
VITE_SHOW_WALLET_DEBUG=false
